<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.UserDataFragment">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_bottom_sheet_add_new_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_title_bottom_sheet_add_new_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/animation_bottom_sheet_add_new_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingBottom="30dp"
        android:text="Allowed"
        android:textColor="#1EB444"
        android:textSize="30sp" />



    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_title_bottom_sheet_add_new_message_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/animation_bottom_sheet_add_new_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingBottom="30dp"
        android:text="Denied"
        android:textColor="#F5291C"
        android:textSize="30sp" />



</androidx.constraintlayout.widget.ConstraintLayout>